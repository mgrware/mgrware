 <% if @comment.errors.present? %>
        $("#form-comment").html(" <%= j( render 'blogs/form_comment' ) %>");
    $($(".field_with_errors")[0]).append("<p class = 'message'> <%= escape_javascript( @comment.errors[:content].first ) %></p>");
        <% else %>
            $("#list-comments").html(" <%= j( render 'blogs/comment' ) %>");
            $("#comment_content").val('');
            $("div.field_with_errors p.message").remove();
    <% end %>