 <%= form_for @comment, role: "form", class: "form-horizontal", url: comments_path, remote: true do |f| %>
  <%= f.hidden_field :blog_id, value: @blog.id %>
  <% if current_user %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <div class="form-group">
 <div class="col-lg-12">
<%= f.text_area :content, class: "form-control", rows: 8, placeholder: "Massage" %>
</div>
</div>
 <div class="form-group">
 <div class="col-lg-12">
 <br>
 <%= f.submit :submit, value: "Comment", class: "btn btn-send" %>
</div>
</div>
<% end %>
<% end %>
