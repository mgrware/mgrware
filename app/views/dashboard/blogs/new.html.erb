
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            New Blog
            <small>Share Your Power</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Blog</a></li>
            <li class="active">New</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-md-12">
              <div class="box box-info">
                <div class="box-header">
                  <h3 class="box-title">What on Your Mind?</h3>
                  <!-- tools box -->
                  <div class="pull-right box-tools">
                    <button class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                  </div><!-- /. tools -->
                </div><!-- /.box-header -->
                <div class="box-body pad">
                    <%= form_for(@blog,:url => "#{dashboard_blogs_path}", html: { multipart: true } ) do |form|-%>
                      <div class="form-group">
                  <%= @blog.errors[:title].first unless @blog.errors[:title].blank? %>
                  <%= form.label :title %>
                  <%= form.text_field :title, :class=> 'form-control', :placeholder => 'Title' %>
                  </div>
                   <div class="form-group">
                   <%= @blog.errors[:category].first unless @blog.errors[:category].blank? %>
                    <%= form.label :category %>
                     <%= form.select :category, options_for_select([['Tutorial','tutorial'],['Pribadi','pribadi'],['Berita','berita']],
                      params[:category]),{}, { :class => 'btn btn-default dropdown-toggle' } %> 
                  </div>
                  
                  <div class="form-group">
                  <%= @blog.errors[:content].first unless @blog.errors[:content].blank? %>
                  <%= form.cktext_area :content, :id => 'sometext' %>
                  </div>
                  <div class="form-group">
                  <%= @blog.errors[:image].first unless @blog.errors[:image].blank? %>
                  <%= form.label :image %>
                  <%= form.file_field :image, :class=> 'form-control btn btn-default', :placeholder => 'image' %>
                  </div>
             
                  <div class="form-group">
                  <%= form.submit :submit, :action=> 'create', :value=> 'Publish!',  :class=> "btn btn-primary" %>
                  </div>
                  <% end -%>
                </div>
              </div><!-- /.box -->  


            </div><!-- /.col-->
          </div><!-- ./row -->
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
