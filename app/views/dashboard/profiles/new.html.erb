
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Create Your Profile
            <small>Preview</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">Profiles</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <!-- left column -->
            <div class="col-md-12">
          
              <!-- general form elements disabled -->
              <div class="box box-warning">
                <div class="box-header with-border">
                  <h3 class="box-title">Your Profiles</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                <%= form_for(@profile,:url => "#{dashboard_profiles_path}", html: { multipart: true } ) do |form|-%>
               		 <%= form.hidden_field :user_id, value: current_user.id %>
                      <div class="form-group">
                  <%= @profile.errors[:name].first unless @profile.errors[:name].blank? %>
                  <%= form.label :name %>
                  <%= form.text_field :name, :class=> 'form-control', :placeholder => 'Title' %>
                  </div>
                  <div class='form-group'>
                   <%= @profile.errors[:last_name].first unless @profile.errors[:last_name].blank? %>
                  <%= form.label :last_name %>
                  <%= form.text_field :last_name, :class=> 'form-control', :placeholder => 'Lastname' %>
                  </div>
                   <div class='form-group'>
                    <%= @profile.errors[:gender].first unless @profile.errors[:gender].blank? %>
                    <%= form.label :gender %>
                     <%= form.select :gender, options_for_select([['Female','Female'],['Male','Male']],
                      params[:gender]),{}, { :class => 'btn btn-default dropdown-toggle' } %> 
                  </div>
                 <!--   <div class='form-group'>
                   <%= @profile.errors[:birthday].first unless @profile.errors[:birthday].blank? %>
                  <%= form.label :birthday %>
                  <%= form.datetime_select(:birthday, start_year:1970)%>
                  </div> -->
                   <div class='form-group'>
                   <%= @profile.errors[:jobdesk].first unless @profile.errors[:jobdesk].blank? %>
                  <%= form.label "Job" %>
                  <%= form.text_field :jobdesk, :class=> 'form-control', :placeholder => 'Job' %>
                  </div>
                  <div class="form-group">
                  <%= form.label :about %>
                  <%= @profile.errors[:about].first unless @profile.errors[:about].blank? %>
                  <%= form.text_area :about, rows: "6", cols:"175" %>
                  </div>
                  <div class="form-group">
                  <%= @profile.errors[:image].first unless @profile.errors[:image].blank? %>
                  <%= form.label :image %>
                  <%= form.file_field :image, :class=> 'form-control btn btn-default', :placeholder => 'image' %>
                  </div>
             
                  <div class="form-group">
                  <%= form.submit :submit, :action=> 'create', :value=> 'Create!',  :class=> "btn btn-primary" %>
                  </div>
                  <% end -%>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!--/.col (right) -->
          </div>   <!-- /.row -->
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
      